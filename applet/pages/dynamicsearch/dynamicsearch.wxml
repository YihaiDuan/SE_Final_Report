    <view class="right1">
    <view style="display:flex;">
    <view style="flex:1;">
     <text class="one1">{{item.booktitle}}</text>
    </view>
     </view>
       <view >
      <text class="author1" style="flex:1;display:block;">作者：{{item.author}}</text>
       <text class="introduce1" style="flex:1;display:block;">{{item.introduce}}</text>
     </view>
       
 
    </view>
 
 </view>

</view>
</view>
