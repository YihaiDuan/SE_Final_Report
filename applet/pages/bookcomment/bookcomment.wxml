<view  class="box"     >

<form   bindsubmit="submit" style="width:100%">
<textarea   style="height:50rpx;font-weight:700;margin-bottom:30rpx;font-size:40rpx;" class="cossition"  placeholder-style="font-size:32rpx;color:#CFCFCF;letter-spacing: 6rpx;margin-bottom:30rpx"  placeholder="标题"  name="title"  value="{{title}}"   bindinput="inputtitle" maxlength="50"/>

 <textarea placeholder="正文" placeholder-style="font-size:32rpx;color:#CFCFCF;letter-spacing: 6rpx;"  class="cossition"     value="{{content}}" name="describ" bindinput="inputcontent"   maxlength="1000"/>



<view  wx:if="{{bookbol}}" bindtap="changesearch"
style="display:flex;margin:10rpx 0; border-top:1rpx solid #eee;border-bottom:1rpx solid #ddd;padding:20rpx 0;">
<text style="flex:1;font-size:28rpx">给书评配上图书吧</text><text class="iconfont icon-icon" style="font-size:34rpx;vertical-align:text-top;color:#ccc;"></text></view>






<view  wx:if="{{!bookbol}}" bindtap="changesearch">


<view style="margin-top:10rpx;background:#E7E9E8;padding:10rpx; display:flex;">
<view class="imagebox">
<image src="{{bookimages}}" class="bookimages"></image>
</view>
<view class="booknews">
<view class="bookname">{{booktitle}}</view>
<view class="author">{{author}}</view>
</view>
</view>

</view>

  <view style="margin-top:70rpx;">
   <button  form-type="submit" hover-class="buttom-hover"              class="buttonx" size="default">发 表</button>
 
  </view>

</form>


</view>


<!--收藏的显示和搜索后的显示-->
<view   class="search"  wx:if="{{searchbol}}">

<form bindsubmit="formSubmit">
  <view class="section">
  <picker value="{{index}}" range="{{citys}}" bindchange="bindPickerChanger">
  <view style="margin-top:24rpx;color:#666;">{{citys[index]}}</view>
</picker>

  <input placeholder="输入想要的书籍"  auto-focus placeholder-class="placeholder1" class="inputclass"     name="search"  bindinput="bindKeyInput"  
  />
  <button size="mini" form-type="submit" hover-class="buttom-hover" class="button">搜索</button>
</view>
</form>

<view class="page-header" wx:if="{{searchbol2}}" style="display:flex">
<text class="page-header-text" style="line-height:90rpx;font-size:30rpx;color:red;padding-left:30rpx;flex:1;">没有搜索到相关信息</text>
</view>


 <view class="news1" wx:if="{{searchbol1}}" >
 <view class="page-header" style="display:flex">
<text class="page-header-text" style="line-height:90rpx;font-size:30rpx;color:#999;padding-left:30rpx;flex:1;">搜索结果</text><text style="color:#999;font-size:30rpx;margin-right:60rpx;line-height:90rpx;vertical-align:text-bottom;">共检索到<text style="color:red;font-size:34rpx;padding:0 6rpx;">{{searchlist.size}}</text>记录</text>
</view>
<view class="booknews1"    wx:for="{{searchlist.searchlist}}">
<view  style="display:flex" data-bookid="{{item.bookid}}"  data-booktitle="{{item.booktitle}}" 
data-typeid="{{item.category_id}}" 
data-bookimages="{{item.bookimages}}"  
data-author="{{item.author}}"  bindtap="selectbook">
    <view>
    <image src="{{item.bookimages}}" class="left" mode="aspectFit" ></image>
    </view>
    <view class="right1">
    <view style="display:flex;">
    <view style="flex:1;">
     <text class="one1">{{item.booktitle}}</text>
    </view>
     </view>
       <view >
      <text class="author1" style="flex:1;display:block;">作者：{{item.author}}</text>
       <text class="introduce1" style="flex:1;display:block;">{{item.introduce}}</text>
     </view>
   
 
    </view>
 </view>
</view>
<view class="load" wx:if="{{true}}">已加载完全部内容</view>
</view>





