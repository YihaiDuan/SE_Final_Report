<scroll-view scroll-y="true" class="page-body">
 <view class="text">
 <image src="{{sharelist.userimages}}" class="userimage"></image>
 <view class="usernews" style="flex:1">
   <view class="user">
     <text class="username2">{{sharelist.nickname}}</text>
     <text class="iconfont icon-dingwei" style="font-size:26rpx; vertical-align:text-top;margin-right:10rpx;color:#007bff;margin-top:6rpx;"></text>

     <text class="username2" wx:if="{{distance!='距离未知'}}">{{distance}}m</text>

<text class="username2" wx:if="{{distance=='距离未知'}}">{{distance}}</text>

     </view>
 
 
 <view class="booknum">目前{{sharelist.sharenum}}本可借</view>

 </view>
 <view class="qrcode">
 <image src="http://localhost:8080/BorrowBook/images/{{sharelist.personQR}}" class="qrimage"></image>
 <text class="borrow">长按向Ta借书</text>
 </view>
 </view>
<view class="news">


<view class="booknews" wx:for="{{sharelist.book}}">



<navigator url="../details/details?shareid={{item.shareid}}&distance={{distance}}">
    <view>
    <image src="{{item.bookimages}}" class="left" ></image>
    </view>
</navigator>


    <view class="right" >
     <text class="one">{{item.booktitle}}</text>
     <text class="tow" style="font-size:26rpx;">{{item.show}}</text>
     <view class="user" style="margin-top:30rpx;">
     <text class="username">分享者:{{item.nickname}}</text>
     <image class="username" src="../../images/女.png" style="width:36rpx;height:36rpx;"></image>
     <text class="username2" wx:if="{{distance!='距离未知'}}">{{distance}}m</text>

<text class="username2" wx:if="{{distance=='距离未知'}}">{{distance}}</text>
     </view>
    </view>


   
</view>
</view>

</scroll-view>

