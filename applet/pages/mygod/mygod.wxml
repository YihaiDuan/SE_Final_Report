<view class="page">  
  <!--顶部导航栏-->  
  <view class="swiper-tab">  
    <view class="tab-item {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">关注</view>  
    <view class="tab-item {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">粉丝</view>  
    <view class="tab-item {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">推荐</view>  
  </view>  
  <!--内容主体-->  
  <swiper class="swiper" current="{{currentTab}}" duration="200" bindchange="swiperChange">  
    <swiper-item>  
      <view>
      <view class="top">我的关注</view>
      <view class="content">

<view    style="text-align:center;">
<text style="font-size:28rpx;color:#999" wx:if="{{!showbol}}">
您还没有关注他人
</text>
</view>
      <view class="news"    wx:if="{{showbol}}"  wx:for="{{userlist}}">
      <navigator   wx:if="{{logs.userid!=item.userid}}"  url="../userinf/userinf?userid={{item.userid}}&bol1=0"  hover-class="none">
      <image src="{{item.userimages}}" class="userimages"></image><text class="username">{{item.nickname}}</text>
   </navigator>

   
      </view>


      </view>
      </view>  
    </swiper-item>  
    <swiper-item>  
       <view>
      <view class="top">我的粉丝</view>
      <view class="content">



<view    style="text-align:center;">
<text style="font-size:28rpx;color:#999" wx:if="{{!showbol1}}">
您还没有被他人关注
</text>
</view>





      <view class="news"    wx:if="{{showbol1}}"   wx:for="{{fanlist}}">
         <navigator   wx:if="{{logs.userid!=item.userid}}"  url="../userinf/userinf?userid={{item.userid}}&bol1=0"  hover-class="none">
      <image src="{{item.userimages}}" class="userimages"></image><text class="username">{{item.nickname}}</text>
</navigator>
      </view>
      </view>
      </view>  
    </swiper-item>  
    <swiper-item>  
       <view>
      <view class="top">我的推荐</view>
      <view class="content">

<view    style="text-align:center;">
<text style="font-size:28rpx;color:#999" wx:if="{{!showbol2}}">
暂无推荐
</text>
</view>


  <view class="news"    wx:if="{{showbol2}}"   wx:for="{{referlist}}">
     <navigator   wx:if="{{logs.userid!=item.userid}}"  url="../userinf/userinf?userid={{item.userid}}&bol1=0"  hover-class="none">
      <image src="{{item.userimages}}" class="userimages"></image><text class="username">{{item.nickname}}</text>
</navigator>

    
      </view>
      </view>
      </view>   
    </swiper-item>  
  </swiper>  
</view>  